# Functions and Control Flow

fn add(a: Int, b: Int) -> Int do
  a + b
end

fn factorial(n: Int) -> Int do
  if n <= 1 then 1 else n * factorial(n - 1) end
end

fn fibonacci(n: Int) -> Int do
  if n <= 1 then n else fibonacci(n - 1) + fibonacci(n - 2) end
end

fn main() do
  print add(5, 3)
  print factorial(5)
  print fibonacci(10)
end
